<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dung"
    android:orientation="horizontal"
    tools:context=".RoomOne">




    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/kermit"
        android:layout_width="83dp"
        android:layout_height="89dp"
        android:src="@drawable/kermit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"></pl.droidsonroids.gif.GifImageView>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/wazosk"
        android:layout_width="83dp"
        android:layout_height="89dp"
        android:src="@drawable/wazosk"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.256"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95"></pl.droidsonroids.gif.GifImageView>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/kirb"
        android:layout_width="83dp"
        android:layout_height="89dp"
        android:src="@drawable/kirb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.337"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.673"></pl.droidsonroids.gif.GifImageView>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/yosh"
        android:layout_width="83dp"
        android:layout_height="89dp"
        android:src="@drawable/yosh"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.854"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.673"></pl.droidsonroids.gif.GifImageView>

    <include
        layout="@layout/message_box_position"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="82dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="300dp">

        <Button
            android:id="@+id/Choice1"
            android:text="A"
            android:textSize="30sp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:background="@drawable/custom_button"
            android:textColor="#00ff00"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/Choice2"
            android:text="B"
            android:textSize="30sp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:background="@drawable/custom_button"
            android:textColor="#00FFFF"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/Choice3"
            android:text="C"
            android:textSize="30sp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_gravity="fill"
            android:background="@drawable/custom_button"
            android:textColor="#cc0099"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/Choice4"
            android:text="D"
            android:textSize="30sp"
            android:layout_row="2"
            android:layout_column="4"
            android:layout_gravity="fill"
            android:background="@drawable/custom_button"
            android:textColor="#9999FF"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textStyle="bold"
            />
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>