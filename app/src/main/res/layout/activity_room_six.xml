<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".RoomSix">

    <TextView
        android:id="@+id/Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="165dp"
        android:layout_marginTop="195dp"
        android:layout_marginEnd="436dp"
        android:layout_marginBottom="149dp"
        android:text="Score"
        android:textColor="#ffffff"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/encode"
        android:layout_width="247dp"
        android:layout_height="54dp"
        android:layout_marginStart="243dp"
        android:layout_marginTop="328dp"
        android:layout_marginEnd="244dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/attempt_encode_button" />

    <EditText
        android:id="@+id/attempt"
        android:layout_width="219dp"
        android:layout_height="44dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="40dp"
        android:autoText="false"
        android:ems="10"
        android:hint="Enter guess here"
        android:inputType="textPersonName"
        android:selectAllOnFocus="false"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/submit"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/submit"
        android:layout_width="123dp"
        android:layout_height="41dp"
        android:layout_marginEnd="137dp"
        android:layout_marginBottom="36dp"
        android:text="Submit"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/decode"
        app:layout_constraintTop_toBottomOf="@+id/caesar"
        app:srcCompat="@drawable/submit_button" />

    <ImageView
        android:id="@+id/morse"
        android:layout_width="183dp"
        android:layout_height="150dp"
        android:layout_marginStart="409dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="110dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/morse" />

    <ImageView
        android:id="@+id/ciphertext3"
        android:layout_width="175dp"
        android:layout_height="97dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="98dp"
        android:layout_marginEnd="412dp"
        android:layout_marginBottom="216dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ciphertext3" />

    <ImageView
        android:id="@+id/cipher3"
        android:layout_width="324dp"
        android:layout_height="165dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="318dp"
        android:layout_marginBottom="177dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cipher3" />

    <include layout="@layout/message_box_position" />

</androidx.constraintlayout.widget.ConstraintLayout>